<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="tdg.database" transaction-type="JTA">
      <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
      <class>nl.h2.ejb.schema.AdjustmentJPA</class>
      <class>nl.h2.ejb.schema.AdjustmentDefinitionJPA</class>
      <class>nl.h2.ejb.schema.AdressesJPA</class>
      <class>nl.h2.ejb.schema.AdviceJPA</class>
      <class>nl.h2.ejb.schema.BagJPA</class>
      <class>nl.h2.ejb.schema.ConditionJPA</class>
      <class>nl.h2.ejb.schema.HousingSituationJPA</class>
      <class>nl.h2.ejb.schema.PersonJPA</class>
      <class>nl.h2.ejb.schema.WmoDecisionsJPA</class>
      <exclude-unlisted-classes>false</exclude-unlisted-classes>
      <properties>
          <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres"/>
          <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
          <property name="hibernate.connection.username"/>
          <property name="hibernate.connection.password"/>
          <property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost:5432/postgres"/>
          <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>
          <property name="openjpa.ConnectionUserName" value="postgres"/>
          <property name="openjpa.ConnectionPassword" value="Hydro1234"/>
      </properties>
  </persistence-unit>
</persistence>